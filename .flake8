[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    E501,
    F401,
    F841,
    E712,
    W291,
    W292,
    W293,
    E128,
    E127,
    E129,
    F541,
    F811,
    F824,
    E305,
    E722,
    F821,
    E131,
    E251,
    E402,
    E302,
    W391
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    alembic/versions
per-file-ignores =
    __init__.py:F401,
    app/api/api_v1/endpoints/analysis.py:E501,
    app/api/api_v1/endpoints/config.py:F401