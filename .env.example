# Database
DATABASE_URL=sqlite:///./drawings.db

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
UPLOAD_DIR=uploads
STATIC_DIR=static
MAX_FILE_SIZE=10485760

# ML Models
VISION_MODEL=vit
DEFAULT_THRESHOLD_PERCENTILE=95.0
MIN_SAMPLES_PER_AGE_GROUP=50

# Development
DEBUG=false

# Testing (optional)
SKIP_MODEL_LOADING=false  # Set to 'true' to skip heavy Vision Transformer model loading for faster tests